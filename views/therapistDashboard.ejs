}

.dashboard-table {
  border-collapse: collapse;
  width: 100%;
  margin-top: 20px;
}

.dashboard-table th,
.dashboard-table td {
  border: 1px solid #ddd;
  padding: 10px;
  text-align: left;
}

.sidebar-header {
  display: flex;
